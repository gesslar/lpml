{
  "name": "lpml",
  "displayName": "LPML Language Support",
  "description": "LPML (LPC Markup Language) highlighter + intellisense + formatter + validator for VS Code. Based on better-json5.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.101.0"
  },
  "publisher": "gesslar",
  "repository": {
    "url": "https://github.com/gesslar/lpml"
  },
  "main": "./dist/node/clientMain.js",
  "browser": "./dist/browser/clientMain.js",
  "scripts": {
    "compile-dbg": "webpack --mode development",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "package": "npm run compile && vsce package --no-dependencies",
    "release": "npm run package && vsce publish --no-dependencies && ovsx publish --no-dependencies"
  },
  "icon": "./icon.png",
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "activationEvents": [
    "onCommand:lpml.validate"
  ],
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters"
  ],
  "contributes": {
    "languages": [
      {
        "id": "json5",
        "aliases": [
          "JSON5",
          "json5"
        ],
        "extensions": [
          ".json5"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "lpml",
        "aliases": [
          "LPML",
          "lpml"
        ],
        "extensions": [
          ".lpml"
        ],
        "configuration": "./language-configuration.lpml.json"
      }
    ],
    "grammars": [
      {
        "language": "json5",
        "scopeName": "source.json5",
        "path": "./syntaxes/json5.tmLanguage.json"
      },
      {
        "language": "lpml",
        "scopeName": "source.lpml",
        "path": "./syntaxes/lpml.tmLanguage.json"
      }
    ],
    "configuration": {
      "id": "lpml",
      "order": 20,
      "type": "object",
      "title": "LPML",
      "properties": {
        "lpml.schemas": {
          "type": "array",
          "scope": "resource",
          "description": "%lpml.schemas.desc%",
          "items": {
            "type": "object",
            "default": {
              "fileMatch": [
                "/myfile"
              ],
              "url": "schemaURL"
            },
            "properties": {
              "url": {
                "type": "string",
                "default": "/user.schema.json",
                "description": "%lpml.schemas.url.desc%"
              },
              "fileMatch": {
                "type": "array",
                "items": {
                  "type": "string",
                  "default": "MyFile.lpml",
                  "description": "%lpml.schemas.fileMatch.item.desc%"
                },
                "minItems": 1,
                "description": "%lpml.schemas.fileMatch.desc%"
              },
              "schema": {
                "$ref": "http://json-schema.org/draft-07/schema#",
                "description": "%lpml.schemas.schema.desc%",
                "default": {}
              }
            }
          }
        },
        "lpml.validate.enable": {
          "type": "boolean",
          "scope": "window",
          "default": true,
          "description": "%lpml.validate.enable.desc%"
        },
        "lpml.format.enable": {
          "type": "boolean",
          "scope": "window",
          "default": true,
          "description": "%lpml.format.enable.desc%"
        },
        "lpml.format.keepLines": {
          "type": "boolean",
          "scope": "window",
          "default": false,
          "description": "%lpml.format.keepLines.desc%"
        },
        "lpml.format.trailingCommas": {
          "type": "string",
          "scope": "window",
          "enum": [
            "keep",
            "none",
            "all"
          ],
          "default": "keep",
          "description": "%lpml.format.trailingCommas.desc%"
        },
        "lpml.format.keyQuotes": {
          "type": "string",
          "scope": "window",
          "enum": [
            "keep",
            "double",
            "single",
            "none-double",
            "none-single"
          ],
          "default": "keep",
          "description": "%lpml.format.keyQuotes.desc%"
        },
        "lpml.format.stringQuotes": {
          "type": "string",
          "scope": "window",
          "enum": [
            "keep",
            "double",
            "single"
          ],
          "default": "keep",
          "description": "%lpml.format.stringQuotes.desc%"
        },
        "lpml.format.tabSize": {
          "type": [
            "number",
            "boolean"
          ],
          "scope": "window",
          "default": false,
          "description": "%lpml.format.tabSize.desc%"
        },
        "lpml.format.startIgnoreDirective": {
          "type": "string",
          "scope": "window",
          "default": "lpml-fmt: off",
          "description": "%lpml.format.startIgnoreDirective.desc%"
        },
        "lpml.format.endIgnoreDirective": {
          "type": "string",
          "scope": "window",
          "default": "lpml-fmt: on",
          "description": "%lpml.format.endIgnoreDirective.desc%"
        },
        "lpml.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "%lpml.tracing.desc%"
        },
        "lpml.decorateAllColors": {
          "type": "boolean",
          "scope": "window",
          "default": true,
          "description": "%lpml.decorateAllColors.desc%"
        },
        "lpml.maxItemsComputed": {
          "type": "number",
          "default": 5000,
          "description": "%lpml.maxItemsComputed.desc%"
        },
        "lpml.schemaDownload.enable": {
          "type": "boolean",
          "default": true,
          "description": "%lpml.enableSchemaDownload.desc%",
          "tags": [
            "usesOnlineServices"
          ]
        }
      }
    },
    "configurationDefaults": {
      "[json5]": {
        "editor.quickSuggestions": {
          "strings": true
        },
        "editor.suggest.insertMode": "replace"
      },
      "[lpml]": {
        "editor.quickSuggestions": {
          "strings": true
        },
        "editor.suggest.insertMode": "replace"
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "*.schema.json5",
        "url": "https://json-schema.org/draft-07/schema#"
      },
      {
        "fileMatch": "*.schema.lpml",
        "url": "https://json-schema.org/draft-07/schema#"
      }
    ],
    "commands": [
      {
        "command": "lpml.clearCache",
        "title": "%lpml.command.clearCache%",
        "category": "LPML"
      },
      {
        "command": "lpml.sort",
        "title": "%lpml.command.sort%",
        "category": "LPML"
      }
    ]
  },
  "dependencies": {
    "@blueglassblock/json5-kit": "^0.3.0",
    "@blueglassblock/json5-languageservice": "^0.8.0",
    "@vscode/l10n": "^0.0.18",
    "request-light": "^0.8.0",
    "vscode-languageclient": "^10.0.0-next.19",
    "vscode-languageserver": "^10.0.0-next.16",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@types/node": "25.x",
    "@types/vscode": "^1.107.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vscode/test-web": "^0.0.77",
    "@vscode/vsce": "^3.7.1",
    "assert": "^2.1.0",
    "eslint": "^9.39.2",
    "ovsx": "^0.10.7",
    "process": "^0.11.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.2",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "packageManager": "yarn@4.5.0"
}
